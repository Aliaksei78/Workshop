pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                bat 'npm install'
            }
        }
        stage('parallel') {
            parallel {
                // start several test jobs in parallel, and they all
                // will use Cypress Dashboard to load balance any found spec files
                stage('Run tests in parallel 1') {
                    steps {
                        bat 'node_modules/.bin/cypress run --record --key a2d437f4-13df-420d-9048-7e41e56abd01 --parallel'
                    }
                }
                stage('Run tests in parallel 2') {
                    steps {
                        bat 'node_modules/.bin/cypress cypress run --record --key a2d437f4-13df-420d-9048-7e41e56abd01 --parallel'
                    }
                }
            }
        }
    }
}
